@model CursoWeb2.Models.USUARIO

@{
    Layout = null;
}
@using System.Data
@using (Html.BeginForm("ActualizarUsuario", "Home", FormMethod.Post))
{


    <div class="form-group">
        <label for="Nombre">Nombre</label>
        @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @id = "Nombre" })
    </div>

    <div class="form-group">
        <label for="Apellido">Apellido</label>
        @Html.TextBoxFor(model => model.Apellido, new { @class = "form-control", @id = "Apellido" })
    </div>

    <div class="form-group">
        <label for="Correo">Correo</label>
        @Html.TextBoxFor(model => model.Correo, new { @class = "form-control", @id = "Correo" })
    </div>

    <div class="form-group">
        <label for="Clave">Clave</label>
        @Html.PasswordFor(model => model.Contraseña, new { @class = "form-control", @id = "Clave" })
    </div>


    <button type="submit" class="btn btn-primary">Guardar cambios</button>
}
